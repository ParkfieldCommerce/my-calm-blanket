<div class="InfoBanner" style="background-image:url('{{section.settings.image | img_url: 'master'}}');">
  <div class="InfoBanner__content">
    <h2 class="InfoBanner__heading">{{section.settings.heading}}</h2>
    <p class="InfoBanner__body">{{section.settings.body}}</p>
    <a href="{{section.settings.button_url}}" class="InfoBanner__button Button Button--main">
      {{section.settings.button_text}}
    </a>
  </div>
</div>


{% schema %}
  {
    "name": "Info Banner",
    "class": "homepage-info-banner",
    "settings":[
      {
        "id":"image",
        "type":"image_picker",
        "label":"Image"
      },
      {
        "id":"heading",
        "type":"text",
        "label":"Heading"
      },
      {
        "id":"body",
        "type":"textarea",
        "label":"Body"
      },
      {
        "id":"button_text",
        "type":"text",
        "label":"Button Text"
      },
      {
        "id":"button_url",
        "type":"url",
        "label":"Button URL"
      }
    ],
    "presets": [
      {
        "name": "Info Banner",
        "category": "Homepage"
      }
    ]
  }
{% endschema %}
