<footer>
  this is the footer
</footer>

{% schema %}
{
  "name": "Footer",
  "max_blocks": 3,
  "settings": [
    {
      "type": "checkbox",
      "id": "show-payment-options",
      "label": "Enable payment icons",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "menus",
      "name": "Menus",
      "settings": [
        {
          "type": "link_list",
          "id": "footer-link-list-1",
          "label": "Menu 1"
        },
        {
          "type": "link_list",
          "id": "footer-link-list-2",
          "label": "Menu 2"
        }
      ],
      "limit": 1
    },
    {
      "type": "featured-content",
      "name": "Rich text",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "footer-text-box",
          "label": "Text"
        }
      ],
      "limit": 1
    },
    {
      "type": "tweet",
      "name": "Twitter feed",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "twitter-id",
          "label": "Username",
          "info": "Note: Don't include the '@' symbol."
        },
        {
          "type": "checkbox",
          "id": "twitter-retweets",
          "label": "Show retweets"
        }
      ],
      "limit": 1
    },
    {
      "type": "instagram",
      "name": "Instagram feed",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "instagram-access-token",
          "label": "Access token ([?](http:\/\/instagram.pixelunion.net))"
        },
        {
          "type": "select",
          "id": "instagram-count",
          "label": "Number of images",
          "options": [
            {
              "value": "3",
              "label": "3"
            },
            {
              "value": "6",
              "label": "6"
            }
          ]
        }
      ],
      "limit": 1
    },
    {
      "type": "connect",
      "name": "Newsletter / social links",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
        },
        {
          "type": "checkbox",
          "id": "enable-mailing-list",
          "label": "Enable newsletter"
        },
        {
          "type": "checkbox",
          "id": "enable-social-links",
          "label": "Enable social links"
        }
      ],
      "limit": 1
    }
  ]
}

{% endschema %}