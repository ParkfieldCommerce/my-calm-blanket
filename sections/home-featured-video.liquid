<div data-section-id="{{ section.id }}" data-section-type="featured-video">

  {% assign sectionTitle = section.settings.title | escape %}
  {% assign sectionBorder = section.settings.border %}
  {% assign video = section.settings.video_url.id %}
  {% assign videoImage = section.settings.image %}
  {% assign videoTextColor = section.settings.text-color %}
  {% assign videoTitle = section.settings.video_title | escape %}
  {% assign videoButtonText = section.settings.button-text | escape %}
  {% assign videoUrl = section.settings.video-url %}

  {%- capture image_html -%}
    {% if videoImage != blank %}
      <img
        alt="{{ videoImage.alt | escape }}"
        src="{{ videoImage | img_url: '1080x640' }}"
        srcset="{{ videoImage | img_url: '1080x640', scale: 2 }} 2x">
    {% elsif video != blank %}
      <img src="https://img.youtube.com/vi/{{ video }}/0.jpg">
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
  {%- endcapture -%}

  <div class="home-module home-video
    {% if sectionBorder %}has-border{% endif %}
    text-color-{{ videoTextColor }}">

    <div class="home-module-content">

      {%
        include 'home-section-title',
        conditional: video,
        onboarding: 'onboarding.featured_video.title'
      %}

      <div class="home-video-play play-button-{{ settings.home-video-play-button-color }}"></div>

      <div class="home-video-embed-wrapper">
        <div class="home-video-embed">
          <iframe width="560" height="315" src="https://www.youtube.com/embed/{{ video }}" frameborder="0" allowfullscreen></iframe>
        </div>
      </div>

      <div class="home-video-content-wrap">
        <div class="home-video-screenshot">
          <span class="home-video-play-button mobile meta">
            {{ 'general.home_page.video_button_text' | t }}
          </span>

          {{- image_html -}}
        </div>

        <div class="home-video-content rte">
          <span class="home-video-play-button meta">
            {{ 'general.home_page.video_button_text' | t }}
          </span>

          {% if videoTitle != blank %}
            <h2 class="video-title">{{ videoTitle }}</h2>
          {% endif %}

          {% if videoButtonText != blank and videoUrl != blank %}
            <p>
              <a class="button" href="{{ videoUrl }}">
                {{ videoButtonText }}
              </a>
            </p>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

</div>

{% schema %}
{
  "name": "Featured video",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Featured video"
    },
    {
      "type": "checkbox",
      "id": "border",
      "label": "Show border",
      "default": false
    },
    {
      "id": "video_url",
      "type": "video_url",
      "label": "Video URL",
      "accept": ["youtube"]
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Video screenshot",
      "info": "1080 x 640px .jpg recommended"
    },
    {
      "type": "select",
      "id": "text-color",
      "label": "Text shade",
      "options": [
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "dark",
          "label": "Dark"
        }
      ],
      "default": "light"
    },
    {
      "type": "text",
      "id": "video_title",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "button-text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "video-url",
      "label": "Link"
    }
  ],
  "presets": [
    {
      "category": "Video",
      "name": "Featured video"
    }
  ]
}

{% endschema %}