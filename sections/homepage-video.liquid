<div class="container m Video__container">
<div class="Video__wrapper">
  <video class="Video js-Video" controls>
    <source src="{{section.settings.webm_video_url}}" type="video/webm">
    <source src="{{section.settings.mp4_video_url}}" type="video/mp4">
  </video>
  <div class="Video__cover js-Video__cover" style="background-image:url('{{section.settings.video_cover | img_url: 'master'}}');">
    <div class="Video__play">
      {% include 'icons' with icon:'play' %}
    </div>  
  </div>
</div>
</div>
<script>
  $(document).ready(function(){
    $('.js-Video__cover').click(function(){
      $(this).addClass('Video__cover--hide');
      var video = document.querySelector('.js-Video');
      video.play();
   });
  });
</script>
{% schema %}
  {
    "name": "Video",
    "class": "homepage-video",
    "settings":[
      {
        "id":"video_cover",
        "type":"image_picker",
        "label":"Cover Image"
      },
      {
        "id":"mp4_video_url",
        "type":"text",
        "label":"MP4 Video Url",
        "info":"In Shopify go to Settings -> Files -> Upload, to upload the video, and then copy and paste the URL of the video here"
      },
      {
        "id":"webm_video_url",
        "type":"text",
        "label":"Webm Video Url",
        "info":"In Shopify go to Settings -> Files -> Upload, to upload the video, and then copy and paste the URL of the video here"
      }
    ],
    "presets": [
      {
        "name": "Video",
        "category": "Homepage"
      }
    ]
  }
{% endschema %}
