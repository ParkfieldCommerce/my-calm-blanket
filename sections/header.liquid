<div class="container m">
<header class="Header">
  <div class="Header__section Header__section--logo">
    <a href="/"><img src="{{section.settings.logo | img_url:'master'}}" alt="{{section.settings.logo.alt}}"></a>
  </div>
  <div class="Header__section Header__section--nav">
    <nav class="Navigation">
      <ul class="Navigation__links">
        {% for link in linklists['main-menu'].links %}
        <li class="Navigation__link"><a href="{{link.url}}">{{link.title}}</a></li>
        {% endfor %}
      </ul>
    </nav>
  </div>
  <div class="Header__section Header__section--account">
    <div class="Header__account--madein">
      <img src="{{section.settings.designed_image | img_url:'master'}}" alt="{{section.settings.designed_image.alt}}">
      <p>{{section.settings.designed_text}}</p>
    </div>
    <a class="Header__account--user" href="/account">{% include 'icons' with icon:'account' %}</a>
    <a class="Header__account--cart" href="/cart">{% include 'icons' with icon:'cart' %}</a>
  </div>
</header>
</div>

<header class="MobileHeader">
  <div class="MobileHeader__section MobileHeader__section--toggle">
    <div class="MobileHeader__toggle js-MobileTrigger">
      <span class="line"></span>
    </div>
  </div>
  <div class="MobileHeader__section MobileHeader__section--logo">
    <a href="/"><img src="{{section.settings.logo | img_url:'master'}}" alt="{{section.settings.logo.alt}}"></a>
  </div>
  <div class="MobileHeader__section MobileHeader__section--account">
    <a href="/cart" class="Header__account--cart">{% include 'icons' with icon:'cart' %}</a>
  </div>
</header>
<nav class="MobileNavigation js-MobileNav">
  <ul class="MobileNavigation__links">
    {% for link in linklists['main-menu'].links %}
    <li class="MobileNavigation__link"><a href="{{link.url}}">{{link.title}}</a></li>
    {% endfor %}
    {% if customer %}
    <li class="MobileNavigation__link"><a href="/account">My Account</a></li>
    {% else %}
    <li class="MobileNavigation__link"><a href="/account/login">Login</a></li>
    <li class="MobileNavigation__link"><a href="/account/register">Register</a></li>
    {% endif %}
  </ul>
  <div class="MobileNavigation__made-in">
    <img src="{{section.settings.designed_image | img_url:'master'}}" alt="{{section.settings.designed_image.alt}}">
    <p>{{section.settings.designed_text}}</p>
  </div>
</nav>
<script>
  $('.js-MobileTrigger').click(function(){
    if($(this).hasClass('active')){
      $(this).removeClass('active');
      $('.js-MobileNav').hide();
      $('body').removeClass('fixed');
    }else{
      $(this).addClass('active');
      $('.js-MobileNav').show();
      $('body').addClass('fixed');
    }
  });
</script>
{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "logo"
    },
    {
      "type":"header",
      "content":"Designed In"
    },
    {
      "type":"text",
      "id":"designed_text",
      "label":"Text",
      "default":"Designed in the US"
    },
    {
      "type":"image_picker",
      "id":"designed_image",
      "label":"Image"
    }
  ]
}

{% endschema %}