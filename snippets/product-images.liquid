{% if product.images.size > 0 %}
  <div class="product-images clearfix">
    <div class="product-main-image {% if section.settings.enable_zoom %}zoom-active{% endif %}">
      {% assign mainImage = variant.featured_image | default: product.featured_image %}

      <img alt="{{ mainImage.alt | escape }}" src="{{ mainImage | img_url: '1280x1280' }}">

      {% if section.settings.enable_zoom %}
        <div class="product-zoom"></div>
      {% endif %}
    </div>

    {% if product.images.size > 1 %}
    <div class="product-thumbnails">
      {% for image in product.images %}
        <img alt="{{ image.alt | escape }}" data-high-res="{{ image | img_url: '1280x1280' }}" src="{{ image | img_url: 'small' }}">
      {% endfor %}
    </div>
    {% endif %}
  </div>
{% endif %}
